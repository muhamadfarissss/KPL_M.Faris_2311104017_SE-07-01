{
  "openapi": "3.0.0",
  "info": {
    "title": "Jurnal Modul 9",
    "description": "API untuk Jurnal Modul 9",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Mahasiswa Restful API Server"
    }
  ],
  "paths": {
    "/api/Mahasiswa": {
      "get": {
        "summary": "Get all Mahasiswa",
        "description": "Mengambil semua data Mahasiswa",
        "responses": {
          "200": {
            "description": "Sukses mengambil semua Mahasiswa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Mahasiswa"
                  },
                  "example": [
                    {
                      "Name": "Andi",
                      "Nim": "12345678",
                      "Course": ["Math", "Physics"],
                      "Year": 2022
                    },
                    {
                      "Name": "Budi",
                      "Nim": "87654321",
                      "Course": ["Biology", "Chemistry"],
                      "Year": 2023
                    },
                    {
                      "Name": "Citra",
                      "Nim": "13579246",
                      "Course": ["Economics", "History"],
                      "Year": 2021
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a new Mahasiswa",
        "description": "Menambahkan Mahasiswa baru ke dalam list",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Mahasiswa"
              },
              "example": {
                "Name": "Dina",
                "Nim": "19283746",
                "Course": ["Programming", "Data Structures"],
                "Year": 2024
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Mahasiswa berhasil ditambahkan"
          }
        }
      }
    },
    "/api/Mahasiswa/{id}": {
      "get": {
        "summary": "Get Mahasiswa by ID",
        "description": "Mengambil Mahasiswa berdasarkan ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID dari Mahasiswa yang ingin diambil"
          }
        ],
        "responses": {
          "200": {
            "description": "Sukses mengambil Mahasiswa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Mahasiswa"
                },
                "example": {
                  "Name": "Andi",
                  "Nim": "12345678",
                  "Course": ["Math", "Physics"],
                  "Year": 2022
                }
              }
            }
          },
          "404": {
            "description": "Mahasiswa tidak ditemukan"
          }
        }
      },
      "delete": {
        "summary": "Delete Mahasiswa by ID",
        "description": "Menghapus Mahasiswa berdasarkan ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID dari Mahasiswa yang ingin dihapus"
          }
        ],
        "responses": {
          "200": {
            "description": "Sukses menghapus Mahasiswa"
          },
          "404": {
            "description": "Mahasiswa tidak ditemukan"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Mahasiswa": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string"
          },
          "Nim": {
            "type": "string"
          },
          "Course": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "Year": {
            "type": "integer"
          }
        },
        "required": ["Name", "Nim", "Course", "Year"]
      }
    }
  }
}
